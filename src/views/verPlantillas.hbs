<br></br>
<div class="text-center">
    <h1>Ver Encuestas</h1>
</div>
<br></br>
<div >
    {{> buttons
    message="Crear Encuesta"
    type = "success"
    tag = "a"
    href = "http://localhost:3000/encuestas/crear"
    }}
</div>

<div class="card mt-5">
    <div class="card-body">
        <div class="input-group mb-3">
            <input 
                type="text" 
                class="form-control" 
                placeholder="Nombre de la encuesta o encuestador" 
                aria-label="Nombre de la encuesta o encuestador"
                name="nomEncuesta"
                aria-describedby="button-addon2" />
            {{> buttons
            type="success"
            message="Buscar"
            nativeType="submit"
            }}
        </div>

        {{!-- Tabla de contenidos --}}
        <!--<table id="grid" class="table table-striped table-bordered dt-responsive nowrap">/-->
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th width="35%">Nombre de la encuesta</th>
                    <th width="35%">Encuestador</th>
                    <th width="30%">Acciones</th>
                </tr>
            </thead>

            <tbody>
              
                {{#each encuestas}}
                    <tr>
                        <td>{{this.nomEncuesta}}</td>
                        <td>{{this.nomEncuesta}}</td>
                        <td>
                            
                            <button type="button" class="btn btn-success" href="http://localhost:3000/encuestas/ver/{{_id}}">Ver</button>
                            
                            <form action="/editar/{{_id}}?_method=post" method="POST">
                                 <button type="button" class="btn btn-warning" href="http://localhost:3000/encuestas/editar/{{_id}}">Editar</button>
                            </form>
                           
                            <form action="/encuestas/delete/{{_id}}?_method=post" method="POST">
                                <div class="form-group">
                                    <button class="btn btn-danger" type="submit">Eliminar</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{else}}
                        <div class="card mx-auto">
                            <div class="lead  d-flex flex-column align-items-center">
                                <br></br>
                                <p>No hay encuestas ingresadas a√∫n</p>
                                <a href="/encuestas/crear" class="btn btn-success btn-block">Crear una</a>
                                <br></br>
                            </div>
                        </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>