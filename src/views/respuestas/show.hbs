
<div class="container">

     <!--Botones atras y exportar-->
    <div class = "relative" style = "height: 50px; margin-top: 40px;" >

      <div class = "float-start">
            {{> buttons
            message="Atr√°s"
            type = "success"
            tag = "a"
            href = "/respuestas"
            }}
        </div>
    <div  class  = "float-end">
        {{> buttons 
            type="success"
            message="Exportar"
            nativeType="subtmi"}}
    </div>

        <div class="col text-end">

        </div>

    </div>

    <div class="text-center my-5">
        <h1 class="text-center">{{datos.nomEncuesta}}</h1>
    </div>

    <div class="card my-5" style="max-width: 1400px; margin-left: auto; margin-right: auto">
        <div class="card-body">
            <h2>Descripcion de la encuesta: </h2>
            <p>{{ datos.descripcion }}</p>
                {{#each datos.secciones as |seccion|}}
                <hr>
                <h2>{{ seccion.nombre }}</h2>
                <p>{{ seccion.descripcion }}</p>
                {{#each seccion.preguntas as |pregunta|}}
                <div class="my-3 rounded border p-3">
                    <h4>{{ pregunta.title }}</h4>

                    {{#if (equalString pregunta.tipoR "opcion-unica") }}
                    {{#each pregunta.respuestas as |respuesta|}}
                    <div>

                        <input type="radio" name="respuesta-{{pregunta._id}}" value="{{ respuesta }}" disabled>
                        <label for="req">{{ respuesta }}</label>
                        
                    </div>
                    {{/each}}
                    <br>
                    <div style="max-width: 500px; margin: 0 auto;">
                        {{> chart options=(chart (respuestas (compareRespuesta ../../respu pregunta._id)) (typeChart)) id=(random 10) w="400" h="400"}}
                    </div>
                    {{/if}}

                    {{#if (equalString pregunta.tipoR "opcion-multiple") }}
                    {{#each pregunta.respuestas as |respuesta|}}
                    <div>

                        <input type="checkbox" name="respuesta-{{pregunta._id}}" value="{{ respuesta }}" disabled>
                        <span>{{ respuesta }}</span>
                        
                    </div>
                    {{/each}}
                    <br>
                    <div style="max-width: 500px; margin:0 auto ;">
                        {{> chart options=(chart (respuestas (compareRespuesta ../../respu pregunta._id)) (typeChart)) id=(random 10) w="400" h="400"}}
                    </div>
                    {{/if}}

                    {{#if (equalString pregunta.tipoR "respuesta-corta") }}
                    <h5>Respuestas</h5>
                    <ol>
                        {{#each (compareRespuesta ../../respu pregunta._id) as |r|}}
                            <li class="my-1">
                                <div>
                                    <input class="form-control" type="text" name="respuesta-{{pregunta._id}}"
                                        value="{{ r }}" disabled>
                                </div>
                            </li>
                        {{/each}}
                    </ol>
                    {{/if}}

                    {{#if (equalString pregunta.tipoR "respuesta-larga") }}
                    <h5>Respuestas</h5>
                    <ol>
                        {{#each (compareRespuesta ../../respu pregunta._id) as |r|}}
                            <li class="my-1">
                                <div>
                                    <textarea class="form-control" type="text" name="respuesta-{{pregunta._id}}"disabled>{{r}}</textarea>
                                </div>
                            </li>
                        {{/each}}
                    </ol>
                    {{/if}}

                </div>
                {{/each}}
                {{/each}}
        </div>
    </div>
</div>